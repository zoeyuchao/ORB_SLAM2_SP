<!-- 
    ROS navigation stack with velocity smoother and safety (reactive) controller
-->
<launch>
	<!--include file="$(find turtlebot_navigation)/launch/includes/velocity_smoother.launch.xml"/-->
	<!--include file="$(find turtlebot_navigation)/launch/includes/safety_controller.launch.xml"/-->
	<arg name="odom_frame_id" default="map"/>
	<arg name="base_frame_id" default="base_link_sp"/>
	<arg name="global_frame_id" default="map"/>
	<arg name="odom_topic" default="odom_sp"/>

  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find ORB_SLAM2_SP)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/base_local_planner_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/move_base_params.yaml" command="load" />

  <!--
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    <rosparam file="$(find ORB_SLAM2_SP)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />   
    <rosparam file="$(find ORB_SLAM2_SP)/params/local_costmap_params.yaml" command="load" />   
    <rosparam file="$(find ORB_SLAM2_SP)/params/global_costmap_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/dwa_local_planner_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/global_planner_params.yaml" command="load" />
    <rosparam file="$(find ORB_SLAM2_SP)/params/navfn_global_planner_params.yaml" command="load" />
  -->
    <!-- reset frame_id parameters using user input data -->
    <param name="global_costmap/global_frame" value="$(arg global_frame_id)"/>
    <param name="global_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="local_costmap/global_frame" value="$(arg odom_frame_id)"/>
    <param name="local_costmap/robot_base_frame" value="$(arg base_frame_id)"/>
    <param name="DWAPlannerROS/global_frame_id" value="$(arg odom_frame_id)"/>

    <remap from="odom" to="$(arg odom_topic)"/>
    <remap from="cmd_vel" to="/cmd_vel_mux/input/navi"/>

  </node>
</launch>
